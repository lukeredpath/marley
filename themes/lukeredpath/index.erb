<% @posts.each do |post| %>
  <div class="post" id="<%= post.id %>">
    <h2>
      <div class="published_on"><%= post.published_on.strftime("%d %B %Y") %>
        <span class="updated_on">updated <%= post.updated_on.strftime("%d %B %Y") %></div>
      <span class="title"><a href="<%= permalink(post) %>"><%= post.title %></a></span>
    </h2>
    <%= post.to_html %>
    <div class="comments"><a href="<%= permalink(post) %>#disqus_thread">View Comments</a></div>
    <%=  Disqus::Widget.comment_counts %>
  </div>
<% end %>

<p><a href="<%= relative_path('archive') %>">&laquo; View older posts</a></p>